<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DialogActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/toLanguageTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:fontFamily="@font/marubold"
            android:gravity="center"
            android:text="korean"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/languageChangeIB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_baseline_autorenew_24" />

        <TextView
            android:id="@+id/fromLanguageTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/marubold"

            android:gravity="center"
            android:text="english"
            android:textColor="@color/black"
            android:textSize="22sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3" />

    <EditText
        android:id="@+id/whatTranslateET"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="3"
        android:background="@android:color/transparent"

        android:ems="10"
        android:fontFamily="@font/marubold"
        android:gravity="start|top"
        android:hint="please_enter_translate"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:textSize="23sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3" />

    <TextView
        android:id="@+id/changedTextTV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/marubold"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:textSize="23sp" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1" />


</LinearLayout>