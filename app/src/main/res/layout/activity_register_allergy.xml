<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterAllergyActivity">

    <TextView
        android:id="@+id/edt_title"
        android:layout_width="352dp"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:fontFamily="@font/marubold"
        android:inputType="textPersonName"
        android:textColor="#6C6A6A"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076"
        android:text="Are there any foods you avoid?"
        />

    <TextView
        android:id="@+id/edt_title2"
        android:layout_width="317dp"
        android:layout_height="27dp"
        android:fontFamily="@font/marubold"
        android:inputType="textPersonName"
        android:text="Selected information gives a notification"
        android:textColor="#FF6C6A6A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edt_title"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/edt_title"
        app:layout_constraintTop_toBottomOf="@+id/edt_title"

        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/edt_title3"
        android:layout_width="317dp"
        android:layout_height="27dp"
        android:fontFamily="@font/marubold"
        android:inputType="textPersonName"
        android:text="when using the service"
        android:textColor="#FF6C6A6A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edt_title2"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="@+id/edt_title2"
        app:layout_constraintTop_toBottomOf="@+id/edt_title"

        app:layout_constraintVertical_bias="0.049" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="72dp"
        android:layout_height="36dp"
        android:background="@drawable/btn_round"
        android:backgroundTint="#A5CC78"
        android:fontFamily="@font/marubold"
        android:text="egg"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="72dp"
        android:layout_height="36dp"
        android:background="@drawable/btn_round"
        android:backgroundTint="#A5CC78"
        android:fontFamily="@font/marubold"
        android:text="nut"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="72dp"
        android:layout_height="36dp"
        android:background="@drawable/btn_round"
        android:backgroundTint="#A5CC78"
        android:fontFamily="@font/marubold"
        android:text="fish"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="72dp"
        android:layout_height="36dp"
        android:background="@drawable/btn_round"
        android:backgroundTint="#A5CC78"
        android:fontFamily="@font/marubold"
        android:text="hala"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="72dp"
        android:layout_height="36dp"
        android:background="@drawable/btn_round"
        android:backgroundTint="#A5CC78"
        android:fontFamily="@font/marubold"
        android:text="bean"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="72dp"
        android:layout_height="36dp"
        android:background="@drawable/btn_round"
        android:backgroundTint="#A5CC78"
        android:fontFamily="@font/marubold"
        android:text="meat"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/btn3"
        app:layout_constraintStart_toStartOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/btn3"
        app:srcCompat="@drawable/bean" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/edt_title3"
        app:layout_constraintTop_toBottomOf="@+id/edt_title3"
        app:srcCompat="@drawable/egg" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/btn1"
        app:layout_constraintStart_toStartOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        app:srcCompat="@drawable/fish" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_title3"
        app:layout_constraintTop_toBottomOf="@+id/edt_title3"
        app:srcCompat="@drawable/peanuts" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/btn4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn4"
        app:srcCompat="@drawable/began" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/btn2"
        app:layout_constraintStart_toStartOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/btn2"
        app:srcCompat="@drawable/halal" />

</androidx.constraintlayout.widget.ConstraintLayout>